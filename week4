<body>

    <div class="background-blob blob-1"></div>
    <div class="background-blob blob-2"></div>

    <nav>
        <div class="logo">NEON<span style="color:var(--neon-blue)">KICKS</span></div>
        <button class="cart-btn">CART (<span id="cart-count">0</span>)</button>
    </nav>

    <div class="container">
        <h1 class="section-title">LATEST DROPS</h1>
        
        <div class="product-grid" id="grid-target"></div>
    </div>

    <div class="modal-overlay" id="product-modal">
        <div class="modal-content">
            <button class="close-modal" onclick="closeModal()">&times;</button>
            <h2 id="modal-title" style="margin-bottom:10px; font-family:'Orbitron', sans-serif;">Product Name</h2>
            <img id="modal-img" src="" style="width:100%; border-radius:10px; margin-bottom:15px;">
            <p id="modal-desc" style="color: #aaa; margin-bottom: 20px; line-height: 1.6;">Description goes here.</p>
            <div class="price-row">
                <span id="modal-price" class="price">$0.00</span>
                <button class="btn-view" onclick="addToCart()">ADD TO CART</button>
            </div>
        </div>
    </div>

    <script>
        // --- DATA OBJECT (Advanced Concept) ---
        // Instead of writing HTML, we hold data in an array. 
        const products = [
            { id: 1, name: "Cyber Runner 2077", price: 189, cat: "Running", img: "https://images.unsplash.com/photo-1542291026-7eec264c27ff?auto=format&fit=crop&w=600&q=80", desc: "Engineered for the neon streets. Features self-lacing tech and reactive sole cushioning." },
            // UPDATED PHOTO FOR NEON HIGH-TOPS
            { id: 2, name: "Neon High-Tops", price: 145, cat: "Street", img: "https://images.unsplash.com/photo-1605348532760-6753d2c43329?auto=format&fit=crop&w=600&q=80", desc: "Classic silhouette meets future tech. Waterproof graphene coating included." },
            { id: 3, name: "Void Walkers", price: 210, cat: "Casual", img: "https://images.unsplash.com/photo-1600185365926-3a2ce3cdb9eb?auto=format&fit=crop&w=600&q=80", desc: "Step into the void. Zero-gravity feel with ultra-light composite materials." },
            { id: 4, name: "Glitch Boost V2", price: 165, cat: "Sport", img: "https://images.unsplash.com/photo-1584735175315-9d5df23860e6?auto=format&fit=crop&w=600&q=80", desc: "Visual distortion design pattern. Optimized for high-impact urban parkour." },
            // UPDATED PHOTO FOR TITANIUM FLEX
            { id: 5, name: "Titanium Flex", price: 250, cat: "Training", img: "https://images.unsplash.com/photo-1600185365483-26d7a4cc7519?auto=format&fit=crop&w=600&q=80", desc: "Metallic mesh upper for breathability and industrial-grade durability." },
            { id: 6, name: "Solar Flares", price: 130, cat: "Summer", img: "https://images.unsplash.com/photo-1606107557195-0e29a4b5b4aa?auto=format&fit=crop&w=600&q=80", desc: "Absorbs sunlight to glow in the dark. Perfect for night runners." },
            { id: 7, name: "Stealth Ops", price: 195, cat: "Tactical", img: "https://images.unsplash.com/photo-1491553895911-0055eca6402d?auto=format&fit=crop&w=600&q=80", desc: "Matte black finish with silent-step sole technology." },
            { id: 8, name: "Quantum Leap", price: 299, cat: "Limited", img: "https://images.unsplash.com/photo-1608231387042-66d1773070a5?auto=format&fit=crop&w=600&q=80", desc: "Our flagship model. Changes color based on foot temperature." }
        ];

        // --- RENDER FUNCTION ---
        const grid = document.getElementById('grid-target');

        function renderProducts() {
            grid.innerHTML = products.map(product => `
                <div class="card">
                    <img src="${product.img}" alt="${product.name}">
                    <div class="card-info">
                        <h3>${product.name}</h3>
                        <p>${product.desc.substring(0, 50)}...</p>
                        <div class="price-row">
                            <span class="price">$${product.price}</span>
                            <button class="btn-view" onclick="openModal(${product.id})">VIEW</button>
                        </div>
                    </div>
                </div>
            `).join('');
        }

        // --- INTERACTION LOGIC ---
        const modal = document.getElementById('product-modal');
        let cart = 0;

        function openModal(id) {
            // Find the product in our data array
            const product = products.find(p => p.id === id);
            
            // Populate Modal
            document.getElementById('modal-title').innerText = product.name;
            document.getElementById('modal-img').src = product.img;
            document.getElementById('modal-desc').innerText = product.desc;
            document.getElementById('modal-price').innerText = `$${product.price}`;
            
            // Show Modal
            modal.classList.add('active');
        }

        function closeModal() {
            modal.classList.remove('active');
        }

        function addToCart() {
            cart++;
            document.getElementById('cart-count').innerText = cart;
            closeModal();
            alert("Added to cart!"); // Simple feedback
        }

        // Close modal if clicking outside the box
        window.onclick = function(event) {
            if (event.target == modal) {
                closeModal();
            }
        }

        // Initial Render
        renderProducts();

    </script>
</body>
