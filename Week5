            transform: translateY(50px);
            animation: fadeUp 1.5s var(--ease) forwards 0.5s; /* Entrance animation */
        }

        .subtitle {
            font-size: 1.2rem;
            letter-spacing: 5px;
            text-transform: uppercase;
            opacity: 0;
            animation: fadeUp 1.5s var(--ease) forwards 1s;
        }

        /* --- 4. SCROLL PROGRESS BAR --- */
        .progress-bar {
            position: fixed;
            top: 0; left: 0; height: 4px;
            background: var(--gold);
            width: 0%;
            z-index: 1000;
        }

        /* --- 5. 3D STORIES GRID --- */
        .stories-section {
            padding: 10vh 5vw;
            position: relative;
        }

        .section-header {
            font-family: 'Playfair Display', serif;
            font-size: 3rem;
            margin-bottom: 4rem;
            text-align: center;
        }

        .grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
            gap: 4rem;
            perspective: 1000px; /* CRITICAL: Creates the 3D space */
        }

        .card {
            position: relative;
            height: 500px;
            transform-style: preserve-3d; /* Allows children to be in 3D space */
            transform: rotateX(0) rotateY(0);
            transition: transform 0.1s; /* Super fast transition for real-time feel */
        }

        .card-inner {
            position: absolute;
            width: 100%; height: 100%;
            background-size: cover;
            background-position: center;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 20px 40px rgba(0,0,0,0.5);
            pointer-events: none; /* Ensures mouse events pass through to the parent .card */
        }
        
        .card-overlay {
            position: absolute;
            bottom: 0; left: 0; width: 100%;
            padding: 2rem;
            background: linear-gradient(to top, rgba(0,0,0,0.9), transparent);
            transform: translateZ(50px); /* Pushes text towards the user in 3D space */
            pointer-events: none;
        }

        .card h3 {
            font-family: 'Playfair Display', serif;
            font-size: 2rem;
            margin-bottom: 0.5rem;
        }

        .card p { font-size: 0.9rem; opacity: 0.8; margin-bottom: 1rem; }

        .read-btn {
            display: inline-block;
