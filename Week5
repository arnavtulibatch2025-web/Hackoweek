    <section class="stories-section">
        <h2 class="section-header hidden">Selected Journals</h2>
        
        <div class="grid">
            <div class="card hidden" onmousemove="tiltCard(event, this)" onmouseleave="resetCard(this)">
                <div class="card-inner" style="background-image: url('https://images.unsplash.com/photo-1531366936337-7c912a4589a7?auto=format&fit=crop&w=800&q=80');"></div>
                <div class="card-overlay">
                    <h3>Northern Lights</h3>
                    <p>Iceland's frozen wilderness.</p>
                    <span class="read-btn" onclick="openStory(0)">Read Journal</span>
                </div>
            </div>

            <div class="card hidden" onmousemove="tiltCard(event, this)" onmouseleave="resetCard(this)" style="transition-delay: 0.2s">
                <div class="card-inner" style="background-image: url('https://images.unsplash.com/photo-1493976040374-85c8e12f0c0e?auto=format&fit=crop&w=800&q=80');"></div>
                <div class="card-overlay">
